<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:paddingBottom="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/messageContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:background="@drawable/target_message_shape"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        app:layout_constraintStart_toEndOf="@+id/messageSenderAvatar"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/messageSender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6D6E6F"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/messageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/message_textView_maxWidth"
            android:textSize="@dimen/messageTextSize"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/messageSender" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/message_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toStartOf="@+id/messageContainer"
        app:layout_constraintTop_toBottomOf="@+id/messageContainer">

        <ImageView
            android:id="@+id/sourceVK"
            android:layout_width="17dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:layout_marginStart="2dp"
            app:srcCompat="@drawable/ic_vk_logo_no_background" />
        <ImageView
            android:id="@+id/sourceTG"
            android:layout_width="17dp"
            android:paddingTop="1dp"
            android:layout_height="12dp"
            android:layout_gravity="center"
            android:layout_marginStart="2dp"
            app:srcCompat="@drawable/ic_tg_logo_no_background" />

        <TextView
            android:id="@+id/sentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            tools:text="12:34"
            android:textColor="#6D6E6F"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="17dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:layout_marginStart="2dp"
            app:srcCompat="@drawable/ic_double_tick" />


    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/messageSenderAvatar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@color/black"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/messageContainer"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>